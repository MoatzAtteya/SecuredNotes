<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecureNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    
    <style name="myfloatButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/black</item>
        <item name="backgroundTint">#ED9615</item>
        <item name="shapeAppearanceOverlay">@style/shapeFloatButton</item>
    </style>

    <style name="shapeFloatButton">
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="appBottom" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/colorBottomAppBar</item>
    </style>
    

</resources>